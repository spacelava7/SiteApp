    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Colors category -->
        <FrameLayout
            android:id="@+id/frame_nightLife"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:background="@color/color_nightLife"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/ic_bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/nightLife"
                android:layout_marginTop="110dp"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/category_nightLife"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

    <!-- Colors category -->
    <FrameLayout
        android:id="@+id/frame_restaurants"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:background="@color/color_restaurants"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_restaurant_white_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/restaurants"
            android:layout_marginTop="110dp"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_restaurants"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

    </RelativeLayout>


</LinearLayout>
